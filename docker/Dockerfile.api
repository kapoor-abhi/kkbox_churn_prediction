FROM python:3.9-slim

WORKDIR /app

# Install system dependencies (needed for LightGBM/Pandas)
RUN apt-get update && apt-get install -y \
    libgomp1 \
    && rm -rf /var/lib/apt/lists/*

COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

COPY src/ src/
COPY app.py .
COPY config/ config/

COPY data/model/production_pipeline.pkl data/model/production_pipeline.pkl

EXPOSE 8000

CMD ["uvicorn", "app:app", "--host", "0.0.0.0", "--port", "8000"]